@model IEnumerable<Gartenkraft_Admin.Models.tblProduct_Line>

@{
    ViewBag.Title = "Current Product Lines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Product Lines</h2>

<p>
    @Html.ActionLink("Add a New Product Line", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Product Line Name")
        </th>
        <th>
            @Html.DisplayName("Date Added")
        </th>
        <th>
            @Html.DisplayName("Soft Delete Status")
        </th>
        <th>
            @Html.DisplayName("Visible Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_line_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_added)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soft_delete)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.is_visible)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.product_line_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.product_line_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.product_line_id })
        </td>
    </tr>
}

</table>
