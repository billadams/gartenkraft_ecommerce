@model Gartenkraft_Admin.Models.tblProduct_Line

@{
    ViewBag.Title = "Delete Product Line";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Product Line</h2>

<h3>Are you sure you want to delete this Product Line?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Line Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_line_name)
        </dd>

        <dt>
            @Html.DisplayName("Date Added")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_added)
        </dd>

        <dt>
            @Html.DisplayName("Soft Delete Status:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soft_delete)
        </dd>

        <dt>
            @Html.DisplayName("Visible Status:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_visible)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            <br/>
            <br/>           
            @Html.ActionLink("Back to Product Lines", "Index")
        </div>
    }
</div>
