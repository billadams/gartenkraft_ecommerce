            @Html.DisplayFor(model => model.tblBilling_Information.billing_first_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tblBilling_Information.billing_last_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBilling_Information.billing_last_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tblBilling_Information.billing_address1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBilling_Information.billing_address1)
            @Html.DisplayFor(model => model.tblBilling_Information.billing_address2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tblBilling_Information.billing_city)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBilling_Information.billing_city)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tblBilling_Information.billing_state)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBilling_Information.billing_state)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tblBilling_Information.billing_zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBilling_Information.billing_zip)
