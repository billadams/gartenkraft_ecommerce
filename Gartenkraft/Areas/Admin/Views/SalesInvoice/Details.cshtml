</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.invoice_id }, htmlAttributes: new { @class = "btn btn-warning" })*@ 
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
</p>

<hr />

<h3>Invoice items:</h3>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tblSales_Invoice_Lineitem.Single().tblProduct.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblSales_Invoice_Lineitem.Single().tblProduct_Option.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblSales_Invoice_Lineitem.Single().lineitem_quantity)
            </th>
        </tr>
        @foreach (var item in Model.tblSales_Invoice_Lineitem)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tblProduct.product_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblProduct_Option.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lineitem_quantity)</td>
            </tr>
        }
    </table>
</div>
