@model Gartenkraft.Models.tblSales_Invoice

@{
    ViewBag.Title = "Details";
}

<h2>Invoice Number: @Model.invoice_id</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.invoice_date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.invoice_date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AspNetUser.UserName)
        </dt>

        <dd>
            @if (Model.customer_id == null)
            {
                @Html.Display("Guest")
            }
            else
            {
                @Html.DisplayFor(model => model.AspNetUser.UserName)
            }
        </dd>
    </dl>

    <h3>Billing Information:</h3>
    <hr />

    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.tblBilling_Information.billing_first_name)
        </dt>

