        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblShipping.shipping_address1)
            @Html.DisplayFor(model => model.tblShipping.shipping_address2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tblShipping.shipping_city)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblShipping.shipping_city)
        </dd>

