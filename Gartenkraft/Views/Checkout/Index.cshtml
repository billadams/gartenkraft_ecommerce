@model Gartenkraft.Models.Checkout

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>@Model.CartInfo.Total Test </p>

<h2>Checkout</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            @using (Html.BeginForm("Checkout", "SubmitOrder", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.BillingInformation.BillingAddress1, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.BillingInformation.BillingAddress1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BillingInformation.BillingAddress1, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BillingInformation.BillingAddress2, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.BillingInformation.BillingAddress2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BillingInformation.BillingAddress2, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit Order" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}