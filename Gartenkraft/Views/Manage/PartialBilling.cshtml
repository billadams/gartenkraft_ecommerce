@model IEnumerable<Gartenkraft.Models.tblBilling_Information>

<p>
    @Ajax.ActionLink("Create New Billing Info", "PartialCreateBilling", null, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "ManageContent", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.billing_first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_last_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_address1)
        </th>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_state)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_zip)
        </th>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_country)
        </th>
        <th></th>
        <th></th>
    </tr>

    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_first_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_last_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_zip4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billing_country)
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "PartialEditBilling", new { id = item.billing_id }, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "ManageContent", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "btn btn-warning" })
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "PartialDeleteBilling", new { id = item.billing_id }, new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "ManageContent", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }


</table>

