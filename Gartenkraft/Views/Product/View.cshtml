@model Gartenkraft.Models.vwProduct

@{
//ViewBag.Title = @Model.product_name;
}

<section class="item">
    
    <div class="info">
        
            @*<h2>@Model.product_name</h2>*@

        <div class="col-md-6">
            
            <div class="product-images col-md-offset-2 col-md-10">
                @if (@Model.ProductImages.Count > 0)
                {
                    <img src="@Url.Content("~/ProductImages/" + @Model.product_id + "/" + @Model.ProductImages.First().product_image_name)" alt="@Model.product_name image" class="img-responsive"/>
                    <ul class="thumbnail-list list-unstyled clearfix">                        
                        @foreach (var image in Model.ProductImages)
                        {
                            <li class="image-thumbnail">
                                <img src="@Url.Content("~/ProductImages/" + @image.product_id + "/" + @image.product_image_name)" alt="@image.product_image_name thumbnail" class="img-responsive"/>
                            </li>
                        }
                    </ul>
                }
                else
                    {
                        <img src = "http://via.placeholder.com/200x200"
                        alt = "Product Image" class=
                        "center-block img-responsive" />
                    }
            </div> <!-- ./col-md-12 -->

        </div> <!-- ./col-md-6 -->

        <div class="col-md-6">

            @using (Html.BeginForm("Add", "Cart"))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.product_id)

                <div class="row">
                    <div class="pull-right col-md-6 price">
                        <p>@Model.PriceRange</p>
                    </div>
                </div>


                <div class="form-group col-md-3 quantity">
                    @Html.LabelFor(model => model.quantity)
                    @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @Value = "1", @class = "form-control" } })
                </div>
                    
                if (Model.is_custom_product == true)
                {
                <div class="form-group col-md-4 custom-dropdown">
                    @Html.LabelFor(model => model.SelectedOptionID, "Select option")
                    @Html.DropDownListFor(model => model.SelectedOptionID, new SelectList(Model.Options, "option_id", "title"), htmlAttributes: new {@class = "form-control"})
                </div>
                }
                        
                <div class="col-md-5">
                    <input type="submit" value="Add to Cart" class="btn btn-primary" />
                </div>
            }

        </div> <!-- ./col-md-6 -->
        
        <div class="row pull-right col-md-6">
            
            <p>Details</p>
            <hr/>
            <p>@Model.product_short_description</p>
            <p>@Model.product_long_description</p>

        </div> <!-- ./col-md-6 -->

    </div> <!-- ./info -->

</section>
