@model IEnumerable<Gartenkraft.Models.vwProduct>

@{
    ViewBag.Title = "Index";
}

<section class="items">
    <ul class="item-list">
    @foreach (var item in Model)
    {
        <li>
            <div class="info">
                <p>@item.product_name</p>
                <img src="http://via.placeholder.com/375x200" alt="Product Image" class="img-responsive" />
                <p>@item.product_short_description</p>
                <p>Price: @item.product_unit_price.ToString(("c"))</p>
            </div>
            <div>
                <button class="btn btn-primary center-block">
                    @Html.ActionLink("View Product", "View", "Product", new { productID = item.product_id }, htmlAttributes: null) 
                </button>
            </div>
        </li>
    }
    </ul>
</section>


